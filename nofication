spawn(function()
for i,v in pairs (game.CoreGui:GetDescendants())do
    if v.Name == "Venyx" then
        v:Destroy()
end
end
end)
local nofi = loadstring(game:HttpGet("https://raw.githubusercontent.com/zxciaz/VenyxUI/main/Reuploaded"))() --someone reuploaded it so I put it in place of the original back up so guy can get free credit.

local nofication = nofi.new("Venyx", 5013109572)


for i,v in pairs (game.CoreGui.Venyx:GetDescendants())do
    if v.Name == "Main" then
        v:Destroy()
end
end



spawn(function()
nofication:Notify("Join the discord :>")
end)

spawn(function()
for i,v in pairs (game.CoreGui.Venyx:GetDescendants())do
    if v.Name == "Notification" then
        wait(0.2)
        v.Size = UDim2.new(0, 175, 0, 75)
        v.Position = UDim2.new(0, 4, 1, -80)
end
end
spawn(function()

while true do
	for i = 0,1,0.001*1 do
	    game:GetService("CoreGui").Venyx.Notification.Decline.ImageColor3 = Color3.fromHSV(i,1,1)
		game:GetService("CoreGui").Venyx.Notification.Accept.ImageColor3 = Color3.fromHSV(i,1,1) --creates a color using i
		wait()
	end
end
    end)
end)
